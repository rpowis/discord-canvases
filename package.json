{
    "name": "discord-canvases",
    "version": "1.0.0",
    "description": "A simplified collaborative document editor for Discord communities",
    "main": "dist/bot.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/bot.js",
        "dev": "ts-node src/bot.ts",
        "dev:watch": "nodemon --exec ts-node src/bot.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "type-check": "tsc --noEmit",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix"
    },
    "keywords": [
        "discord",
        "bot",
        "collaborative",
        "documents",
        "canvas"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "discord.js": "^14.14.1",
        "sqlite3": "^5.1.6",
        "dotenv": "^16.3.1"
    },
    "devDependencies": {
        "typescript": "^5.3.3",
        "ts-node": "^10.9.2",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "nodemon": "^3.0.2",
        "@types/jest": "^29.5.8",
        "@types/node": "^20.10.6",
        "@types/sqlite3": "^3.1.11",
        "eslint": "^8.56.0",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.test.ts",
            "!src/**/*.d.ts"
        ],
        "testMatch": [
            "**/__tests__/**/*.ts",
            "**/?(*.)+(spec|test).ts"
        ],
        "moduleFileExtensions": [
            "ts",
            "js"
        ]
    }
}