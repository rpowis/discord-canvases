# Discord Bot Configuration
# Copy this file to .env and fill in your actual values

# Discord Bot Token (required)
# Get this from https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here

# Discord Client ID (required for slash commands)
# This is your bot's Application ID from the Discord Developer Portal
DISCORD_CLIENT_ID=your_client_id_here

# Database Configuration
DATABASE_PATH=./data/canvases.db

# Bot Configuration
# Edit session timeout in minutes
EDIT_TIMEOUT_MINUTES=10

# Auto-save interval in seconds
AUTO_SAVE_INTERVAL_SECONDS=30

# Maximum content length in characters
MAX_CONTENT_LENGTH=10000

# Content preview length in characters (for embed display)
CONTENT_PREVIEW_LENGTH=200

# Environment (development, production)
NODE_ENV=development

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info 